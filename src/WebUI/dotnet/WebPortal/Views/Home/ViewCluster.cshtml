<table id="cluster_status" class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total GPU</th>
            <th>Reserved GPU</th>
            <th>Used GPU</th>
            <th>Available GPU</th>
            <th>Active Jobs</th>
