{
   "apiVersion": "apps/v1",
   "kind": "DaemonSet",
   "metadata": {
      "labels": {
         "component": "kube-proxy",
         "tier": "node"
      },
      "name": "kube-proxy",
      "namespace": "kube-system"
   },
   "spec": {
      "selector": {
         "matchLabels": {
            "component": "kube-proxy"
         }
      },
      "template": {
         "metadata": {
            "labels": {
               "component": "kube-proxy",
               "tier": "node"
            }
         },
         "spec": {
            "containers": [
               {
                  "command": [
                     "/hyperkube",
                     "proxy",
                     "--kubeconfig=/etc/kubernetes/worker-kubeconfig.yaml",
                     "--proxy-mode=userspace"
                  ],
                  "image": "{{cnf["kubernetes_docker_image"]}}",
                  "name": "kube-proxy",
                  "resources": {
                     "requests": {
                        "cpu": "100m"
                     }
                  },
                  "securityContext": {
                     "privileged": true
                  },
                  "volumeMounts": [
                     {
                        "mountPath": "/etc/ssl/certs",
                        "name": "ssl-certs-host",
                        "readOnly": true
                     },
                     {
                        "mountPath": "/etc/kubernetes",
                        "name": "kubeconfig",
                        "readOnly": true
                     }
                  ]
               }
            ],
            "hostNetwork": true,
            "volumes": [
               {
                  "hostPath": {
                     "path": "/usr/share/ca-certificates"
                  },
                  "name": "ssl-certs-host"
               },
               {
                  "hostPath": {
                     "path": "/etc/kubernetes"
                  },
                  "name": "kubeconfig"
               }
            ]
         }
      }
   }
}
